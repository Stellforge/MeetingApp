@model List<UserInfo>
@{
    ViewData["Title"] = "Toplantı Katılım Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <h1>Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Email</td>
                <td>Katılım durumu</td>
                <td>Detay</td>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }

            @foreach (var x in Model)
            {
                var durum = x.WillAttend == true ? "Evet" : "Hayır";
                var className = x.WillAttend == true ? "table-success" : "table-danger";

                if (x.WillAttend == true)
                {
                    i++;
                }
                <tr class="@className">
                    <td>@x.Name</td>
                    <td>@x.Email</td>
                    <td>@durum</td>
                    <td><a class="btn btn-sm btn-primary" href="/meeting/details/@x.Id">Detay</a></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <span>Katılımcı sayısı: @i</span>
        </div>
    </div>
</main>